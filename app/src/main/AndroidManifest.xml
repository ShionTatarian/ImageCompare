<?xml version="1.0" encoding="utf-8"?>
<manifest package="fi.qvik.imagecompare"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:name=".ImageCompareApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".settings.SettingsActivity"
            android:label="SettingsActivity"
            android:launchMode="singleTask"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".list.MainActivity"
            android:label="MainActivity">

        </activity>
        <activity
            android:name=".gif.GifActivity"
            android:label="GifActivity"
            />
        <activity
            android:name=".fresco.FrescoListActivity"
            android:label="FrescoListActivity"
        />

    </application>

</manifest>
